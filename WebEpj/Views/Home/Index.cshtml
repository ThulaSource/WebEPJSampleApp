@{
    ViewData["Title"] = "Home Page";

}

@model HomeModel

<div class="container-fluid epj-nav">
    <div class="row">
        <div class="col">
            <h1>EPJ Emulator</h1>
        </div>
        <div class="col-10">
            <div class="float-right">
                <form class="form-inline ng-untouched ng-pristine ng-valid" method="POST" asp-action="Redirect" asp-controller="Home">
                    <div class="form-group">
                        <select class="form-control form-control-sm ng-untouched ng-pristine ng-valid" asp-for="SelectedEnvironment" asp-items="@Model.Environments" id="env_list"></select>
                    </div>
                    <div class="form-group">
                        <select class="form-control form-control-sm ng-untouched ng-pristine ng-valid" asp-for="SelectedTicket" asp-items="@Model.Patients" id="patients"></select>
                    </div>
                    <button class="btn btn-sm btn-primary" type="submit">Open</button>
                </form>
            </div>
        </div>
    </div>
</div>